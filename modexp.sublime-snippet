	//credits: arjan_bal
inline ll exp(ll x, ll n, ll m = MOD) {
    ll r = 1;
    while(n) {
        if(n & 1) r = r * x % m;
        x = x * x % m, n >>= 1;
    }
    return r;
}
]]></content>
